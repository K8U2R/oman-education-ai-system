# Backend Environment Configuration
# نموذج إعدادات البيئة للنظام الخلفي

# Application
PORT=3000
NODE_ENV=development
APP_NAME=Oman Education AI Backend
APP_URL=http://localhost:3000

# Security
SECRET_KEY=your-secret-key-change-in-production
JWT_SECRET=your-jwt-secret-key-change-in-production
SESSION_SECRET=your-session-secret-change-in-production

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/oman_education
DATABASE_CORE_URL=postgresql://user:password@localhost:5432/oman_education_core

# Redis (optional - for caching)
REDIS_HOST=localhost
REDIS_PORT=6379

# Frontend
FRONTEND_URL=http://localhost:30174
CORS_ORIGIN=http://localhost:30174

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_CALLBACK_URL=http://localhost:3000/api/auth/google/callback
