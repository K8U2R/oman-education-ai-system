{
  "system": {
    "name": "Oman Education AI OS",
    "version": "1.0.0",
    "language": "ar",
    "timezone": "Asia/Muscat"
  },
  "performance": {
    "max_memory_mb": 2048,
    "max_cpu_percent": 80,
    "enable_caching": true,
    "cache_size_mb": 512
  },
  "security": {
    "enable_firewall": true,
    "enable_antivirus": true,
    "encryption_enabled": true,
    "session_timeout_minutes": 30
  },
  "logging": {
    "level": "INFO",
    "max_file_size_mb": 10,
    "backup_count": 5,
    "console_output": true
  },
  "monitoring": {
    "health_check_interval_seconds": 60,
    "performance_monitor_interval_seconds": 1,
    "enable_alerts": true
  },
  "services": {
    "auto_start": true,
    "max_concurrent_processes": 10
  }
}

