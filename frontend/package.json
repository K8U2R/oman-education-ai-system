{
  "name": "oman-education-ai-frontend",
  "version": "1.0.0",
  "type": "module",
  "description": "Oman Education AI System - Frontend",
  "scripts": {
    "dev": "vite",
    "dev:debug": "vite --debug",
    "build": "npm run type-check && vite build",
    "start": "node scripts/kill-port.js && vite preview --port 4173",
    "preview": "node scripts/kill-port.js && vite preview --port 4173",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest --coverage",
    "test:watch": "vitest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:debug": "playwright test --debug",
    "lint": "eslint . --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint . --ext ts,tsx --fix",
    "lint:watch": "eslint . --ext ts,tsx --watch",
    "type-check": "tsc --noEmit",
    "type-check:watch": "tsc --noEmit --watch",
    "format": "prettier --write \"src/**/*.{ts,tsx,js,jsx,json,css,md,scss}\"",
    "format:check": "prettier --check \"src/**/*.{ts,tsx,js,jsx,json,css,md,scss}\"",
    "check": "npm run type-check && npm run lint && npm run format:check",
    "check:fix": "npm run lint:fix && npm run format",
    "check:path": "npm run type-check -- --include",
    "validate": "npm run type-check && npm run lint && npm run format:check && npm run test",
    "quality": "npm run check",
    "quality:fix": "npm run check:fix",
    "analyze": "node scripts/analyze-bundle.js",
    "analyze:build": "npm run build && npm run analyze",
    "prepare": "husky"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.38.4",
    "@types/multer": "^2.0.0",
    "axios": "^1.6.2",
    "lucide-react": "^0.294.0",
    "multer": "^2.0.2",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@playwright/test": "^1.57.0",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.43",
    "@types/react-dom": "^18.2.17",
    "@typescript-eslint/eslint-plugin": "^6.14.0",
    "@typescript-eslint/parser": "^6.14.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "autoprefixer": "^10.4.16",
    "eslint": "^8.55.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "husky": "^9.1.7",
    "jsdom": "^27.4.0",
    "lint-staged": "^16.2.7",
    "msw": "^2.12.7",
    "postcss": "^8.4.32",
    "prettier": "^3.1.1",
    "sass": "^1.69.5",
    "tailwindcss": "^3.3.6",
    "typescript": "^5.2.2",
    "vite": "^5.0.8",
    "vitest": "^4.0.16"
  }
}
